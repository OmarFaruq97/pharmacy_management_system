<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns=""
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  "
              name="invoice_template" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="contactNumber" class="java.lang.String"/>
    <parameter name="amount" class="java.lang.Double"/>
    <parameter name="discount" class="java.lang.Double"/>
    <parameter name="discountAmount" class="java.lang.Double"/>
    <parameter name="netPayable" class="java.lang.Double"/>

    <field name="itemName" class="java.lang.String"/>
    <field name="category" class="java.lang.String"/>
    <field name="price" class="java.lang.Double"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="subtotal" class="java.lang.Double"/>

    <title>
        <band height="60">
            <staticText>
                <reportElement x="0" y="0" width="300" height="20"/>
                <text><![CDATA[Customer Name: ]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$P{customerName}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="20" width="300" height="20"/>
                <text><![CDATA[Contact: ]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="20" width="200" height="20"/>
                <textFieldExpression><![CDATA[$P{contactNumber}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="100" height="20"/><text><![CDATA[Item]]></text></staticText>
            <staticText><reportElement x="100" y="0" width="100" height="20"/><text><![CDATA[Category]]></text></staticText>
            <staticText><reportElement x="200" y="0" width="80" height="20"/><text><![CDATA[Price]]></text></staticText>
            <staticText><reportElement x="280" y="0" width="80" height="20"/><text><![CDATA[Qty]]></text></staticText>
            <staticText><reportElement x="360" y="0" width="100" height="20"/><text><![CDATA[Subtotal]]></text></staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{itemName}]]></textFieldExpression></textField>
            <textField><reportElement x="100" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{category}]]></textFieldExpression></textField>
            <textField><reportElement x="200" y="0" width="80" height="20"/><textFieldExpression><![CDATA[$F{price}]]></textFieldExpression></textField>
            <textField><reportElement x="280" y="0" width="80" height="20"/><textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression></textField>
            <textField><reportElement x="360" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression></textField>
        </band>
    </detail>

    <summary>
        <band height="80">
            <staticText><reportElement x="0" y="0" width="150" height="20"/><text><![CDATA[Total Amount:]]></text></staticText>
            <textField><reportElement x="160" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$P{amount}]]></textFieldExpression></textField>

            <staticText><reportElement x="0" y="20" width="150" height="20"/><text><![CDATA[Discount:]]></text></staticText>
            <textField><reportElement x="160" y="20" width="100" height="20"/><textFieldExpression><![CDATA[$P{discount} + "%"]]></textFieldExpression></textField>

            <staticText><reportElement x="0" y="40" width="150" height="20"/><text><![CDATA[Discount Amount:]]></text></staticText>
            <textField><reportElement x="160" y="40" width="100" height="20"/><textFieldExpression><![CDATA[$P{discountAmount}]]></textFieldExpression></textField>

            <staticText><reportElement x="0" y="60" width="150" height="20"/><text><![CDATA[Net Payable:]]></text></staticText>
            <textField><reportElement x="160" y="60" width="100" height="20"/><textFieldExpression><![CDATA[$P{netPayable}]]></textFieldExpression></textField>
        </band>
    </summary>
</jasperReport>
